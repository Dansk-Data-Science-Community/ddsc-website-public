# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_SETTINGS_MODULE=ddsc_web.settings.azure
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Database Configuration (Azure Database for PostgreSQL)
POSTGRES_DB=ddsc_production
POSTGRES_USER=django
POSTGRES_PASSWORD=your-strong-password-here
POSTGRES_HOST=your-postgres-server.postgres.database.azure.com
POSTGRES_PORT=5432

# Redis Configuration (Azure Cache for Redis)
REDIS_HOST=your-redis-cache.redis.cache.windows.net
REDIS_PORT=6380
REDIS_PASSWORD=your-redis-access-key
REDIS_SSL=true

# Azure Blob Storage Configuration
AZURE_ACCOUNT_NAME=yourstorageaccount
AZURE_ACCOUNT_KEY=your-storage-account-key
AZURE_STORAGE_CONTAINER=ddsc
AZURE_STORAGE_LOCATION=prod

# Alternative: S3-Compatible Storage (DigitalOcean Spaces, AWS S3, MinIO)
# If not using Azure Blob Storage, uncomment and configure these:
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_ENDPOINT_URL=https://ams3.digitaloceanspaces.com

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password

# Application URLs and Settings
CONSUME_TICKET_ENDPOINT=https://yourdomain.com/events/consume/
SALARY_URL=https://your-salary-survey-url.com
SLACK_INVITATION_LINK=https://join.slack.com/your-workspace

# Newsletter Integration (MailerLite)
MAILERLITE_API_KEY=your-mailerlite-api-key

# Social Authentication (Optional)
SOCIAL_AUTH_GITHUB_KEY=your-github-oauth-key
SOCIAL_AUTH_GITHUB_SECRET=your-github-oauth-secret
SOCIAL_AUTH_SLACK_KEY=your-slack-oauth-key
SOCIAL_AUTH_SLACK_SECRET=your-slack-oauth-secret

# Database Password (for production deployment)
DB_PASSWORD=your-production-db-password
